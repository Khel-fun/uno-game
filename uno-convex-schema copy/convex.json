{
  "version": "1.0",
  "tables": {
    "games": {
      "primaryKey": "gameId",
      "fields": {
        "gameId": {
          "type": "string",
          "description": "Unique identifier for the game"
        },
        "players": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Addresses of players in the game"
          }
        },
        "status": {
          "type": "string",
          "enum": [
            "NotStarted",
            "Started",
            "Ended"
          ],
          "description": "Current status of the game"
        },
        "startTime": {
          "type": "number",
          "description": "Timestamp when the game started"
        },
        "endTime": {
          "type": "number",
          "description": "Timestamp when the game ended"
        },
        "gameHash": {
          "type": "string",
          "description": "Hash representing the game state"
        },
        "moves": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "Hashes of moves made in the game"
          }
        }
      }
    },
    "players": {
      "primaryKey": "playerId",
      "fields": {
        "playerId": {
          "type": "string",
          "description": "Unique identifier for the player"
        },
        "name": {
          "type": "string",
          "description": "Name of the player"
        },
        "joinedGames": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "List of game IDs the player has joined"
          }
        }
      }
    },
    "sessions": {
      "primaryKey": "sessionId",
      "fields": {
        "sessionId": {
          "type": "string",
          "description": "Unique identifier for the session"
        },
        "playerId": {
          "type": "string",
          "description": "Identifier of the player associated with the session"
        },
        "gameId": {
          "type": "string",
          "description": "Identifier of the game associated with the session"
        },
        "isActive": {
          "type": "boolean",
          "description": "Indicates if the session is currently active"
        },
        "lastActivity": {
          "type": "number",
          "description": "Timestamp of the last activity in the session"
        }
      }
    }
  }
}
